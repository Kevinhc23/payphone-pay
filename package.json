{
  "name": "payphone-pay",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Paquete para integrar PayPhone Payments en NodeJS con TypeScript de forma sencilla.",
  "keywords": [
    "payphone",
    "pay",
    "phone",
    "sdk",
    "api",
    "node",
    "typescript",
    "javascript"
  ],
  "author": "Kevin Hernandez <kevinhernandezcrespo97@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kevinhc23/payphone-pay.git"
  },
  "bugs": {
    "url": "https://github.com/Kevinhc23/payphone-payments/issues"
  },
  "homepage": "https://github.com/Kevinhc23/payphone-pay#readme",
  "main": "dist/index.js",
  "module": "dist/payphone-pay.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/payphone-pay.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/payphone-pay.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.1",
    "@tsconfig/recommended": "^1.0.3",
    "@types/uuid": "^9.0.7",
    "dts-cli": "^2.0.3",
    "husky": "^8.0.3",
    "size-limit": "^11.0.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  }
}
